<div class="container d-flex justify-content-center align-items-center vh-100">
  <div>
    <h1>New game</h1>
    <p>What is the longest word you can find?</p>
    <div class="d-flex justify-content-center">
      <% @letters.each do |letter| %>
        <div class="letter-card">
          <span><%= letter %></span>
        </div>
      <% end %>
    </div>
    <div class="form-container">
      <form action="/score" method="post" data-turbo="false">
        <input type="text" name="attempt" placeholder="Enter your attempt">
        <input type="submit" value="Play">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <%= hidden_field_tag :time, Time.now() - @start %>
      </form>
    </div>
  </div>
</div>
